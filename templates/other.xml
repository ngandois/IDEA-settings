<templateSet group="other">
  <template name="logger" value="private static Logger log = Logger.getLogger($CLASS_NAME$.class);$END$ " description="log4j logger declaration" toReformat="true" toShortenFQNames="true">
    <variable name="CLASS_NAME" expression="className()" defaultValue="" alwaysStopAt="false" />
    <context>
      <option name="JAVA_DECLARATION" value="true" />
    </context>
  </template>
</templateSet>